{
  "name": "jovie",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=20.17",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "typecheck:staged": "tsc -p tsconfig.json --noEmit",
    "check": "npm run lint && npm run typecheck && npm run build && npm test",
    "test": "vitest run",
    "test:ci": "vitest run --reporter=verbose --coverage",
    "test:watch": "vitest",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "e2e:smoke": "playwright test -g @smoke",
    "e2e:full": "playwright test",
    "a11y:ci": "playwright test -g @a11y",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "postbuild": "next-sitemap",
    "verify-artist-images": "node scripts/verify-artist-images.js",
    "update-artist-images": "node scripts/update-artist-images.js",
    "ensure-valid-artist-images": "node scripts/ensure-valid-artist-images.js",
    "prepare": "husky",
    "danger": "danger ci --fail-on-errors --verbose",
    "db:migrate": "node scripts/db-migrate.js",
    "db:seed": "node scripts/db-seed.js"
  },
  "dependencies": {
    "@clerk/nextjs": "^6.31.1",
    "@fontsource/inter": "^5.2.6",
    "@headlessui/react": "^2.2.7",
    "@heroicons/react": "^2.2.0",
    "@hookform/resolvers": "^5.2.1",
    "@stripe/stripe-js": "^7.8.0",
    "@supabase/supabase-js": "^2.39.0",
    "@vercel/analytics": "^1.5.0",
    "@vercel/edge-config": "^1.4.0",
    "clsx": "^2.1.0",
    "critters": "^0.0.25",
    "date-fns": "^3.2.0",
    "dotenv": "^17.2.1",
    "flags": "^4.0.1",
    "framer-motion": "^11.0.0",
    "next": "^15.4.5",
    "next-themes": "^0.4.6",
    "posthog-js": "^1.132.7",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-hook-form": "^7.62.0",
    "remark": "^15.0.1",
    "remark-html": "^16.0.1",
    "simple-icons": "^15.9.0",
    "stripe": "^18.4.0",
    "tailwind-merge": "^3.3.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@playwright/test": "^1.40.1",
    "@tailwindcss/postcss": "^4.1.11",
    "@tailwindcss/typography": "^0.5.10",
    "@testing-library/jest-dom": "^6.2.0",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^24",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.38.0",
    "@vercel/toolbar": "^0.1.38",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^3.2.4",
    "danger": "^13.0.4",
    "eslint": "^9",
    "eslint-config-next": "^15.4.5",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "husky": "^9.1.7",
    "jsdom": "^23.1.0",
    "lint-staged": "^16.1.4",
    "next-sitemap": "^4.2.3",
    "postcss": "^8",
    "prettier": "^3.1.1",
    "tailwindcss": "^4.1.12",
    "typescript": "^5",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "next lint --fix --file",
      "prettier --write"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ],
    "ignore": [
      "app/.well-known/**"
    ]
  }
}
